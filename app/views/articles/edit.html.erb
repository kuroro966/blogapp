<%if @current_user_id==@article.user_id %>
  <%= form_for @article do |f| %><!--@productはID特定済、reviewは空の状態。f.text_fieldでｶﾗﾑとﾚｺｰﾄﾞを取得する　CreateｱｸｼｮﾝかUpdateｱｸｼｮﾝが自動判断で起こる-->
    
      <%= f.label :評価 %>
      <%= f.text_area :text, placeholder: 'レビューを書いてね！', style: 'width: 100%; height: 300px;' %>
      <%= button_tag type: "submit", class: "btn btn--block" do %>
        投稿する<i class="icon-arrow-right"></i>
      <% end %>
      
  <% end %>
